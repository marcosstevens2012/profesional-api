# Environment
NODE_ENV=production
PORT=3001

# Database - Supabase PostgreSQL (IMPORTANT: Change this!)
DATABASE_URL="postgresql://user:password@host:5432/database"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT (IMPORTANT: Change these in production!)
JWT_SECRET="your-secret-key-here-change-in-production"
JWT_REFRESH_SECRET="your-refresh-secret-key-here-change-in-production"
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS (set your production domains)
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=50

# Swagger (disabled in production)
ENABLE_SWAGGER=false

# Sentry (optional)
SENTRY_DSN=""

# Request ID
REQUEST_ID_HEADER=x-request-id

# Storage Configuration
STORAGE_PROVIDER=supabase

# Supabase Storage (required if STORAGE_PROVIDER=supabase)
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"
SUPABASE_STORAGE_BUCKET=attachments
SUPABASE_SIGNED_URL_TTL=900

# Vercel Blob Storage (optional, if STORAGE_PROVIDER=vercel)
VERCEL_BLOB_READ_WRITE_TOKEN=""
BLOB_PUBLIC_BASE_URL=https://blob.vercel-storage.com

# GitHub Token for private packages (only needed during npm install)
GITHUB_TOKEN=your-github-token-here
